{% extends 'base.html.twig' %}

{% block title %}Vehicule
{% endblock %}

{% block body %}
	{% for notification in app.flashes('success') %}
		<div>{{ notification }}</div>
	{% endfor %}
	<table class="table">
		<thead>
			<tr>
				<th scope="col">#</th>
				<th scope="col">Agence</th>
				<th scope="col">Titre</th>
				<th scope="col">Marque</th>
				<th scope="col">Modele</th>
				<th scope="col">Description</th>
				<th scope="col">Photo</th>
				<th scope="col">Prix</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody class="table-group-divider">
			{% for vehicule in vehicules %}
				<tr>
					<th scope="row">{{ vehicule.id }}</th>
					<td>{{ vehicule.ville }}</td>
					<td>{{ vehicule.titre }}</td>
					<td>{{ vehicule.marque }}</td>
					<td>{{ vehicule.modele }}</td>
					<td>{{ vehicule.description }}</td>
					<td>
						<img src="{{ vehicule.photo }}" alt="" width="250">
					</td>
					<td>{{ vehicule.prix_journalier }}</td>
					<td>
						<div class="d-flex justify-content-between">
							<a href="{{ path('get_vehicule' , {'id' : vehicule.id } ) }}">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#2d2d2c" class="bi bi-search" viewbox="0 0 16 16">
									<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
								</svg>
							</a>
							<a href="{{ path('put_vehicule' , {'id' : vehicule.id } ) }}">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#2d2d2c" class="bi bi-pencil-square" viewbox="0 0 16 16">
									<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
									<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
								</svg>
							</a>
							<a href="{{ path('delete_vehicule' , {'id' : vehicule.id } ) }}">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#2d2d2c" class="bi bi-trash3-fill" viewbox="0 0 16 16">
									<path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"/>
								</svg>
							</a>
						</div>
					</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<section class="container">

		{{ form_start(formVehicules)}}
		<div class="d-flex flex-column justify-content-between">
			<div class="row">
				<div class="col-md-6">
					<div class="col-md-12">
						{{ form_row(formVehicules.titre) }}
					</div>
					<div class="col-md-12">
						{{ form_row(formVehicules.marque) }}
					</div>
					<div class="col-md-12">
						{{ form_row(formVehicules.modele) }}
					</div>
					<div class="col-md-12">
						{{ form_row(formVehicules.prix_journalier) }}
					</div>
				</div>
				{# ---- #}
				<div class="col-md-6">
					<div class="col-md-12">
						{{ form_row(formVehicules.photo) }}
					</div>
					<div class="col-md-12">
						{{ form_row(formVehicules.agence) }}
					</div>
					<div class="col-md-12">
						{{ form_row(formVehicules.description) }}
					</div>
				</div>
				{# ---- #}
			</div>
			<div class="row">
				<button class="btn bg-primary text-light col-md-12 my-3">Valider</button>
			</div>
		</div>
		{{ form_end(formVehicules)}}

	</section>

{% endblock %}
